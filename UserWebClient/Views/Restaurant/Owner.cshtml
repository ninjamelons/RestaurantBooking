                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default btn-color-style" />
                    </div>
                </div>
            </div>
        }

        <div class="col-md-3">
            @Html.ActionLink("Back to List", "Index","Restaurant", new { @class = "btn btn-default btn-color-style" })
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
    </div>
</body>